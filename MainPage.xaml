<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MontresETPrestiges.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Accueil">

    <ContentPage.Content>
        <StackLayout
            Padding="20"
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <!--  Message d'acceuil  -->

            <Label
                Margin="0,0,0,20"
                FontSize="24"
                HorizontalOptions="Center"
                Text="Bonjour, que voulez vous faire ?" />

            <!--  Bouton pour accéder a la gestion des stocks  -->

            <Button
                Margin="0,10"
                Clicked="NavGestionStock"
                FontSize="18"
                Text="Gestion des stocks"
                WidthRequest="250" />

            <!--  Bouton pour accéder aux suivies des commandes  -->

            <Button
                Margin="0,10"
                Clicked="NavSuivieCommande"
                FontSize="18"
                Text="Suivies des commandes"
                WidthRequest="250" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
